{
  "name": "cap-bookshop-demo",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "scripts": {
    "start": "cds run",
    "hana-deploy": "cds deploy --to hana:cap-bookshop-demo-db",
    "watch-fe-bookshop-ui": "cds watch --open fe-bookshop-ui/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "./db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "auth": {
        "kind": "xsuaa"
      },
      "approuter": {
        "kind": "cloudfoundry"
      }
    }
  },
  "sapux": [
    "app/fe-bookshop-ui"
  ],
  "devDependencies": {
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
    "@sap/ux-specification": "^1.102.17",
    "@sapui5/ts-types": "^1.92.2",
    "eslint": "^7.32.0"
  }
}
